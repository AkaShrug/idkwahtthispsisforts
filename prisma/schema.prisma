// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uid                  Int          @id @default(autoincrement()) @map("id")
  name                 String       @unique
  nick                 String?
  isFirstLogin         Boolean      @default(true)
  token                String?      @default("")
  warshipId            Int          @default(0)
  warshipFirstAvatarId Int          @default(101)
  birthDate            Int?
  avatars              Avatar[]
  clientData           ClientData[]
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
}

model ClientData {
  id           String   @id @default(cuid())
  clientDataId Int
  data         String
  user         User     @relation(fields: [userUid], references: [uid], onDelete: Cascade)
  userUid      Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Avatar {
  avatarId          Int
  level             Int  @default(1)
  star              Int
  stigmataUniqueId1 Int  @default(0)
  stigmataUniqueId2 Int  @default(0)
  stigmataUniqueId3 Int  @default(0)
  exp               Int  @default(0)
  fragment          Int  @default(0)
  weaponUniqueId    Int
  skillList         Json
  dressList         Json
  dressId           Int
  user              User @relation(fields: [userUid], references: [uid], onDelete: Cascade)
  userUid           Int

  @@id([avatarId, userUid])
}
